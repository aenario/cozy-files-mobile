// Header
.bar
    // overrides inonic default header's height
    height 48px

.has-header
    // overrides inonic default header's height
    top 48px


// TODO: WHAT IS THIS ?!?!?
.bar.bar-calm
    background-color blue

.bar-header
    background-image none
    background-color blue
    box-shadow depth01

    h1.title
        padding-left 15px

        text-align left
        color white
        font-size 20px
        line-height 48px

.btn-menu
    height: 48px
    margin-left: -7px
    margin-top: -5px
    margin-right: 4px
    padding: 0


#btn-menu:focus
#btn-menu:active
#btn-menu.activated
    background-color: blue + 60%

#breadcrumbs
    position relative
    width 100%
    height 30px
    top 2px
    margin-left 6px

    #crumbs
        z-index 0
        position absolute
        display inline-block
        top 0px
        left 28px
        right 0px
        overflow-x scroll
        overflow-y hidden
        height 30px

        &::-webkit-scrollbar
            display none

    ul
        display inline
        margin-bottom 0
        padding-left 0

        list-style none
        white-space nowrap

        li
            display inline

            a
                position relative
                padding 6px 5px 6px 22px

                line-height 30px

                &:after
                    content ""
                    position absolute
                    right -15px
                    top 0
                    z-index 1

                    border-top 15px solid transparent
                    border-bottom 15px solid transparent
                    border-left 15px solid blue

                &:before
                    content ""
                    position absolute
                    left 0
                    top 0

                    border-top 15px solid transparent
                    border-bottom 15px solid transparent
                    border-left 15px solid white

            &:last-child a
                padding-right 20px
                margin-right 10px

                border-top-right-radius 10px
                border-bottom-right-radius 10px

                &:after
                    display none

    a
        margin-right 3px

        background blue

        text-align center
        font-size 15px
        color #fff
        text-decoration none

        &.activated
            background dark-blue

            &:after
                border-left-color dark-blue

    .home
        z-index 3
        position absolute
        height 30px
        width 26px
        padding 6px 0px 6px 10px

        border-top-left-radius 10px
        border-bottom-left-radius 10px


    #truncated
        z-index 1
        position absolute
        height 30px
        width 36px
        left 28px
        padding-left 16px

        line-height 30px

        &:before
            content ""
            position absolute
            left 0
            top 0

            border-top 15px solid transparent
            border-bottom 15px solid transparent
            border-left 15px solid white

    .white-arrow
        z-index 1
        position absolute
        top 0
        width 15px
        height 30px

        border-top 15px solid transparent
        border-bottom 15px solid transparent
        border-left 15px solid white

    .blue-arrow
        z-index 2
        position absolute
        top 0
        width 16px
        height 30px

        border-top 15px solid transparent
        border-bottom 15px solid transparent
        border-left 15px solid blue

    .activated .blue-arrow
        border-left 15px solid dark-blue

    .round
        position absolute
        top 0
        height 30px
        width 11px

        background blue
        border-top-right-radius 10px
        border-bottom-right-radius 10px

    .activated .round
        background dark-blue
