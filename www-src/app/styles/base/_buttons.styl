/*
 * BUTTONS
 * =======
 *
 * This file contains every styles related to buttons.
 */

.button
    text-transform uppercase
    font-weight bold
    box-shadow depth01
    // overrides ionic default
    font-size 14px

    &.button-energized
        background-color red
        border-color red - 20%

    &.button-balanced
        background-color blue
        border-color blue - 10%

    &.button-dark.button-clear
        // overrides ionic default
        background grey-01
        border-color grey-02

    &.button-calm
        background-color blue

.button-bar > .button
    &:first-child
        // overrides ionic default
        border-radius 2px
        margin-right 4px

    &:last-child
        // overrides ionic default
        border-right-width 0
        border-radius 2px
        margin-left 4px

#btn-save
#btn-back
    margin-top 30px
