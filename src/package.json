{
  "name": "cozy-mobile",
  "description": "This is the native mobile client for Cozy.",
  "version": "1.4.1",
  "license": "LGPL-3.0",
  "engines": {
    "node": "~4.4.7"
  },
  "scripts": {
    "postinstall": "npm run build && cordova prepare",
    "build": "brunch build",
    "watch": "brunch watch",
    "android": "cordova run android --device",
    "android-emulator": "cordova run android --emulator",
    "ios": "cordova run ios --device",
    "ios-emulator": "cordova run ios --emulator",
    "lint": "coffeelint -r app test *.coffee",
    "test": "mocha test/unit/*/* --reporter spec --compilers coffee:coffee-script/register --colors",
    "test:watch": "npm run test -- --watch --watch-extensions coffee",
    "prerelease": "npm run build && cordova build android --release",
    "release": "jarsigner -verbose -sigalg SHA1withRSA -digestalg SHA1 -keystore ../keys/cozy-play-store.keystore -storepass `cat ../keys/cozy-play-store.password` ../platforms/android/build/outputs/apk/android-release-unsigned.apk cozy-play-store && zipalign -v 4 ../platforms/android/build/outputs/apk/android-release-unsigned.apk ../CozyFiles.apk",
    "postrelease": "PACKAGE_VERSION=$(node -p -e \"require('./package.json').version\"); mv -f ../CozyFiles.apk ../CozyMobile_$PACKAGE_VERSION.apk; md5 ../CozyMobile_$PACKAGE_VERSION.apk; shasum ../CozyMobile_$PACKAGE_VERSION.apk"
  },
  "dependencies": {
    "async": "2.0.1",
    "backbone": "1.3.3",
    "backbone.statemachine": "0.2.7",
    "jquery": "1.9.1",
    "moment": "2.14.1",
    "moment-timezone": "0.5.5",
    "node-polyglot": "2.0.0",
    "path-browser": "2.2.1",
    "pouchdb": "5.4.5",
    "semver": "5.3.0",
    "underscore": "1.8.3",
    "validator": "5.5.0"
  },
  "devDependencies": {
    "brunch": "1.8.5",
    "chai": "3.5.0",
    "clean-css-brunch": "1.8.0",
    "coffee-script": "1.10.0",
    "coffee-script-brunch": "1.8.3",
    "coffeelint": "1.15.7",
    "cordova": "6.3.0",
    "css-brunch": "1.7.0",
    "jade-brunch": "1.8.2",
    "javascript-brunch": "1.8.0",
    "json-brunch": "1.5.4",
    "memdown": "1.2.0",
    "mocha": "3.0.1",
    "mockery": "1.7.0",
    "stylus-brunch": "1.8.1",
    "uglify-js-brunch": "1.7.8",
    "xmlhttprequest": "1.8.0"
  }
}
